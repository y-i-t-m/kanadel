<section class="Section" id="section-{{ section.id }}" data-section-id="{{ section.id }}">
    <div class="pt-64 pb-64">
        <div class="Container t-center">
            {% if section.settings.disabled == false %}
            <a href="{{ section.settings.banner_link }}" class="bannerLink -disabled" target="_blank" rel="noopener">
                {% else %}
                <a href="{{ section.settings.banner_link }}" class="bannerLink" target="_blank" rel="noopener">
                    {% endif %}
                    <picture>
                        <source srcset="{{ section.settings.mobile_image | img_url: '750x' }}"
                                media="(max-width: 768px)"/>
                        <img src="{{ section.settings.image | img_url: '800x' }}" alt="">
                    </picture>
                </a>
                <p class="mt-16">{{ section.settings.content }}</p>
        </div>
    </div>
</section>


{% schema %}
{
"name": "バナーリンク",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "画像",
"info": "800 x 200px .jpg（推奨サイズ）"
},
{
"type": "image_picker",
"id": "mobile_image",
"label": "スマホ時の画像",
"info": "750 x 1100px .jpg（推奨サイズ）"
},
{
"id": "banner_link",
"type": "url",
"label": "バナーのリンク"
},
{
"type": "richtext",
"id": "content",
"label": "テキスト"
},
{
"type":    "checkbox",
"id":      "disabled",
"default":  false,
"label":   "リンクを有効にする",
"info": "リンクを有効にする場合はチェックをつける"
}
],
"presets": [
{
"category": "Image",
"name": "バナーリンク",
"settings": {}
}
]

}
{% endschema %}